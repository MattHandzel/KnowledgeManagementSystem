{
  "name": "knowledge-management-system-capture",
  "version": "1.0.0",
  "description": "Standalone Knowledge Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"npm run dev --prefix ../web\" \"bash -c 'source ../.venv/bin/activate && python ../server/app.py --config ../config-dev.yaml'\" \"electron .\"",
    "prod": "concurrently \"npm run dev --prefix ../web\" \"bash -c 'source ../.venv/bin/activate && python ../server/app.py --config ../config-prod.yaml'\" \"electron .\""
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron-builder": "^24.0.0"
  }
}
